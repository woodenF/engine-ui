{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [
      "unplugin-vue-define-options/macros-global"
    ],
    "paths": {
      "@engine-ui/*": ["packages/*"]
    },
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true
  },
  "include": [
    "packages/engine-ui/package.json",
    "*/**/*",
    "*/node_modules/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}